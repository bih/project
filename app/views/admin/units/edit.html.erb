<h2>Edit "<%= @unit.unit_name %>" Unit</h2>

<%= simple_form_for(@unit, url: admin_unit_path(@unit)) do |f| %>

  <div class="field">
    <%= f.label :unit_name %><br />
    <%= f.text_field :unit_name, autofocus: true, :required => true %>
    <%= f.error :unit_name %>
  </div>

  <div class="field">
    <%= f.label :unit_code %><br />
    <%= f.text_field :unit_code, :required => true %>
    <%= f.error :unit_code %>
  </div>

  <div class="field">
    <%= f.label :unit_year %><br />
    <%= f.number_field :unit_year, :required => true, :value => Date.current.year %>
    <%= f.error :unit_year %>
  </div>

  <div class="field">
    <%= f.label :audit_comment, "Reason for change" %><br />
    <%= f.text_area :audit_comment, autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "Update Unit" %>
  </div>
<% end %>